<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/item_friend_image"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/item_friend_image"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/item_friend_info"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/item_friend_info"
        android:scaleType="fitXY"
        android:src="@drawable/ic_user_profile" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_friend_image"
        android:layout_toLeftOf="@id/item_friend_info"
        android:layout_toRightOf="@id/item_friend_image"
        android:layout_toStartOf="@id/item_friend_info" >

        <TextView
            android:id="@+id/item_friend_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/item_friend_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_friend_name"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>