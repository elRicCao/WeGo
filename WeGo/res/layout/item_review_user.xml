<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp" >

    <ImageView
        android:id="@+id/item_review_user_image"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:contentDescription="@string/item_friend_image"
        android:scaleType="fitXY"
        android:src="@drawable/default_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_review_user_image"
        android:layout_toRightOf="@id/item_review_user_image"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/item_review_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/background_action"
                android:text="Như Ý"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="12/2014"
                android:textColor="@color/gray" />
        </RelativeLayout>

        <RatingBar
            android:id="@+id/item_review_user_rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:numStars="5" />

        <TextView
            android:id="@+id/item_review_user_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_news_user_name"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Good teamate! This guy helped me a lot!"
            android:textColor="@color/gray"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>