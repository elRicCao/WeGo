<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_action"
    android:padding="12dp" >

    <ImageView
        android:id="@+id/item_group_message_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/item_group_message_image"
        android:src="@drawable/default_group" />

    <TextView
        android:id="@+id/item_group_message_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@drawable/background_round_corner_red"
        android:text="SaiGon Traveler"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toEndOf="@id/item_group_message_image"
        android:layout_toLeftOf="@id/item_group_message_group"
        android:layout_toRightOf="@id/item_group_message_image"
        android:layout_toStartOf="@id/item_group_message_group"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_group_message_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phan Tran Viet"
            android:textColor="@color/green"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_group_message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Let&apos;s go to Nha Trang"
            android:textColor="@color/gray" />
    </LinearLayout>

</RelativeLayout>