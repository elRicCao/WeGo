<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/shadow_background_white">

    <TextView
        android:id="@+id/item_friend_message_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SaiGon Traveler"
        android:background="@drawable/background_red"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_group_invite_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/item_group_message_image"
            android:padding="@dimen/spacing_normal"
            android:scaleType="fitXY"
            android:src="@drawable/ic_user_default" />

        <LinearLayout
            android:id="@+id/item_group_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:gravity="end"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_friend_message_time_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:17am"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/item_friend_message_time_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nov 20"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_group_invite_image"
            android:layout_toLeftOf="@id/item_group_message_time"
            android:layout_toRightOf="@id/item_group_invite_image"
            android:layout_toStartOf="@id/item_group_message_time"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_friend_message_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phan Tran Viet"
                android:textColor="@color/green"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_group_invite_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Let's go to Nha Trang"
                android:textColor="@color/gray" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>