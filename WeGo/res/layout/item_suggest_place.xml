<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp" 
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/background_action">

    <ImageView
        android:id="@+id/item_suggest_place_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/item_friend_image"
        android:scaleType="fitXY"
        android:src="@drawable/ho_chi_minh" />

    <ImageButton
        android:id="@+id/item_rate_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/background_action"
        android:contentDescription="@string/item_friend_info"
        android:src="@drawable/ic_action_user_info" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toEndOf="@id/item_suggest_place_image"
        android:layout_toLeftOf="@id/item_rate_place"
        android:layout_toRightOf="@id/item_suggest_place_image"
        android:layout_toStartOf="@id/item_rate_place" >

        <TextView
            android:id="@+id/item_suggest_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/green"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_suggest_place_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_suggest_place_name"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>