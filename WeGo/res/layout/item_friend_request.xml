<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_background_white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_friend_message_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/item_friend_request_image"
        android:padding="@dimen/spacing_normal"
        android:scaleType="fitXY"
        android:src="@drawable/ic_user_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_friend_message_image"
        android:layout_toRightOf="@id/item_friend_message_image"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_group_invite_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SuperBo"
            android:textColor="@color/green"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_group_invite_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ho Chi Minh City"
            android:textColor="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" 
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/item_friend_message_time_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_green"
            android:text="@string/item_friend_request_button_accept"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_friend_message_time_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:background="@drawable/background_red"
            android:text="@string/item_friend_request_button_decline"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>