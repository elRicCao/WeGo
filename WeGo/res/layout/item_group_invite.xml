<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_action"
    android:orientation="horizontal"
    android:padding="12dp" >

    <ImageView
        android:id="@+id/item_group_invite_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/item_group_invite_image"
        android:scaleType="fitXY"
        android:src="@drawable/default_group" />

    <LinearLayout
        android:id="@+id/item_group_invite_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/item_group_invite_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_action"
            android:contentDescription="@string/item_group_invite_accept"
            android:src="@drawable/ic_action_accept" />

        <ImageButton
            android:id="@+id/item_group_invite_decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_action"
            android:contentDescription="@string/item_group_invite_decline"
            android:src="@drawable/ic_action_decline" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toEndOf="@id/item_group_invite_image"
        android:layout_toLeftOf="@id/item_group_invite_action"
        android:layout_toRightOf="@id/item_group_invite_image"
        android:layout_toStartOf="@id/item_group_invite_action"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_group_invite_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SaiGon Traveler"
            android:textColor="@color/green"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_group_invite_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="We like to travel"
            android:textColor="@color/gray" />
    </LinearLayout>

</RelativeLayout>