<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="vn.edu.hcmut.wego.activity.SignUpActivity" >

        <TextView
            android:id="@+id/activity_signup_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="70sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_signup_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup_instruction"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <EditText
            android:id="@+id/activity_signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_edit_text"
            android:hint="@string/signup_email_hint"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            android:typeface="sans" />

        <EditText
            android:id="@+id/activity_signup_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_edit_text"
            android:hint="@string/signup_username_hint"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:typeface="sans" >
        </EditText>

        <EditText
            android:id="@+id/activity_signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_edit_text"
            android:hint="@string/signup_password_hint"
            android:inputType="textPassword"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/activity_signup_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_edit_text"
            android:hint="@string/signup_location_hint"
            android:inputType="text"
            android:textSize="14sp"
            android:typeface="sans" />

        <EditText
            android:id="@+id/activity_signup_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_edit_text"
            android:hint="@string/signup_phone_hint"
            android:inputType="phone"
            android:textSize="14sp"
            android:typeface="sans" />

        <CheckBox
            android:id="@+id/activity_signup_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/signup_terms_and_conditions"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/activity_signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_button"
            android:minHeight="48dp"
            android:text="@string/signup_button"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>