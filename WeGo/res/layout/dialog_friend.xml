<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog_white"
    android:clickable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dialog_friend_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp" >

        <ImageButton
            android:id="@+id/dialog_friend_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/background_action_green"
            android:contentDescription="@string/dialog_friend_sort"
            android:src="@drawable/ic_action_sort" />

        <TextView
            android:id="@+id/dialog_friend_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="177 friends"
            android:textAllCaps="true"
            android:textColor="@color/green"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/dialog_friend_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:alpha="0.5"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/dialog_friend_no_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="@string/dialog_friend_no_friend"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:visibility="gone" />

    <ListView
        android:id="@+id/dialog_friend_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:listSelector="@drawable/background_action_green" />

</LinearLayout>