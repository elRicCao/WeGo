<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="7" >

        <ImageView
            android:id="@+id/item_chat_contact_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/item_chat_contact_image"
            android:src="@drawable/default_user" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toEndOf="@id/item_chat_contact_image"
            android:layout_toRightOf="@id/item_chat_contact_image"
            android:background="@drawable/background_chat_other_user"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_chat_contact_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hey, do you want to join my trip from Ho Chi Minh to Vinh Long?" />

            <TextView
                android:id="@+id/item_chat_contact_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="26/11, 12:24am"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>