<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- User image -->

    <ImageView
        android:id="@+id/item_search_user_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/item_friend_image"
        android:scaleType="fitXY"
        android:src="@drawable/default_user" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_search_user_image"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/item_search_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_action"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="elRic"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_search_user_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_search_user_name"
            android:layout_marginTop="-6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Ho Chi Minh City"
            android:textColor="@color/gray"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>