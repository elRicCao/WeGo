<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_comment_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/item_comment_image"
        android:scaleType="fitXY"
        android:src="@drawable/default_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_comment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mai Huu Nhan"
            android:textColor="@color/green"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let&apos;s go to Da Lat" />

        <TextView
            android:id="@+id/item_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:17am"
            android:textColor="@color/gray" 
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>