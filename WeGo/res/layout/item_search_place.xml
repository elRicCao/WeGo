<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card"
    android:orientation="vertical" >

    <!-- Owner info -->

    <RelativeLayout
        android:id="@+id/item_place_owner_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp" >

        <!-- User image -->

        <ImageView
            android:id="@+id/item_place_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/item_friend_image"
            android:scaleType="fitXY"
            android:src="@drawable/ic_user_default" />

        <LinearLayout
            android:id="@+id/item_news_like_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_news_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_action"
                android:contentDescription="@string/item_news_like"
                android:drawableTop="@drawable/ic_action_like"
                android:gravity="center_horizontal"
                android:text="177"
                android:textColor="@color/green"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_place_image"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/item_search_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_action"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:text="elRic"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_search_place_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_search_place_name"
                android:layout_marginTop="-6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="November 28 at 12:10pm"
                android:textColor="@color/gray"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>