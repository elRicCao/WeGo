<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.	
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/Widget.Wego.ActionBar</item>
        <item name="android:buttonBarStyle">@style/WeGo.ButtonBarStyle</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Example</item>
    </style>

    <style name="ActionBarTabStyle.Example" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Wego.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/green</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Wego.Widget.ActionBar.Title</item>
    </style>

    <style name="TextAppearance.Wego.Widget.ActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WeGo.ButtonBarStyle" parent="@android:attr/buttonBarStyle">
        <item name="android:background">@color/green</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.Transparent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WeGo.TextAppearance.Huge" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">44sp</item>
    </style>

    <style name="WeGo.TextAppearance.Large" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="WeGo.TextAppearance.Medium" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WeGo.TextAppearance.Small" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WeGo.TextAppearance.Tiny" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>